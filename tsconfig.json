{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@247vitrine/config/*": ["packages/config/*"],
      "@247vitrine/types/*": ["packages/types/*"],
      "@247vitrine/ui-components/*": ["packages/ui-components/*"],
      "@247vitrine/utils/*": ["packages/utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
